<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="157dp"
        android:layout_marginBottom="10dp"
        android:background="#FBE8E8"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-1dp">

        <ImageView
            android:id="@+id/img_kho"
            android:layout_width="159dp"
            android:layout_height="159dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_maKho"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center_vertical"
                android:text="Mã Kho: "
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_tenKho"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center_vertical"
                android:text="Tên Kho: "
                android:textSize="18dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_xoa"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/drawable_hinheclip"
                    android:text="Xóa"
                    app:backgroundTint="@android:color/holo_red_light" />

                <Button
                    android:id="@+id/btn_sua"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="3dp"
                    android:text="Sửa"
                    android:background="@drawable/drawable_hinheclip"
                    app:backgroundTint="@color/teal_200" />

                <Button
                    android:id="@+id/btn_tt"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_hinheclip"
                    android:text="T.Tin"
                    app:backgroundTint="@color/teal_700" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>